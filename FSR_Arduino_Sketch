// Pin definitions
const int sensorPin = A0;// Analog input pin for Muscle Sensor
const int ledPin = LED_BUILTIN; // Built-in LED pin for indication

void setup() {
  // Initialize serial communication
  Serial.begin(9600);
  
  // Initialize LED pin as an output
  pinMode(ledPin, OUTPUT);
  
  // Wait for the sensor to settle
  delay(1000);
  
  // Print header to Serial Monitor
  Serial.println("MyoWare Muscle Sensor Test");
}

void loop() {
  // Read the analog sensor value
  int sensorValue = analogRead(sensorPin);
  
  // Print the sensor value to Serial Monitor
  Serial.print("Sensor Value: ");
  Serial.println(sensorValue);
  
  // Blink the LED based on the sensor reading (optional)
  if (sensorValue > 100) {
    digitalWrite(ledPin, HIGH);
  } else {
    digitalWrite(ledPin, LOW);
  }
  
  // Delay between readings
  delay(100);  // Adjust delay as needed
}
